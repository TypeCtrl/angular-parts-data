{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strict": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "typeRoots": ["node_modules/@types"],
    "outDir": "dist"
  },
  "include": [
    "./src"
  ],
  "exclude": [
		"node_modules",
		"dist"
	]
}
